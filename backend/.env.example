# Server Configuration
PORT=5000

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lms_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Google Cloud Storage Configuration (Required for file uploads)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEYFILE=./config/gcs-key.json
GCS_BUCKET_NAME=your-bucket-name

# Google AI Studio Configuration (Required for AI features)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# JWT Secret (REQUIRED - Generate a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING

# Seed Database Password (REQUIRED for initial database setup)
# This is used to create the root user during database seeding
SEED_DEFAULT_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# AI Service Configuration
AI_PROVIDER=gemini
# Temperature: 0.0-0.3 for factual accuracy (reduces hallucinations)
# Lower values = more deterministic, higher values = more creative
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=2048
AI_STREAMING_ENABLED=false

# Chain-of-Verification (CoVe) Configuration
# CoVe reduces hallucinations by 23% through multi-step verification
COVE_ENABLED=true
# Only verify responses with confidence below this threshold (0.0-1.0)
COVE_CONFIDENCE_THRESHOLD=0.7

# Google Custom Search (Optional - for web search fallback)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here
